<p id="notice"><%= notice %></p>

<h1>Listing Import Paths</h1>

<table>
  <thead>
    <tr>
      <th>Path name</th>
      <th>File count</th>
      <th>Total size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @import_paths.each do |import_path| %>
      <tr>
        <td><%= import_path.path_name %></td>
        <td><%= import_path.file_count %></td>
        <td><%= import_path.total_size %></td>
        <td><%= link_to 'Show', import_path %></td>
        <td><%= link_to 'Edit', edit_import_path_path(import_path) %></td>
        <td><%= link_to 'Destroy', import_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

